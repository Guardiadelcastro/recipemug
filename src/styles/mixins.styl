@import './variables';

square($size)
  width $size
  height $size

comp-size($height, $width)
  height $height
  width $width
  max-height $height
  max-width $width

right-gradient($color1 = $green, $color2 = $aqua)
  background-image linear-gradient(to right, $color1, $color2)

fit-box()
  box-sizing border-box
  height 100%
  width 100%